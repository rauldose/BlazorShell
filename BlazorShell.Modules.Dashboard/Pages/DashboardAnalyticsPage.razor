
@* DashboardAnalyticsPage.razor *@
@page "/dashboard/analytics"
@using BlazorShell.Modules.Dashboard
@using BlazorShell.Core.Components
@inherits ModuleComponentBase

<PageTitle>Analytics - Dashboard</PageTitle>

<div class="container-fluid">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
            <li class="breadcrumb-item active">Analytics</li>
        </ol>
    </nav>

    <h1><i class="bi bi-graph-up"></i> Analytics</h1>

    @if (_stats != null)
    {
        <div class="row mt-4">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">Total Visits</h6>
                        <h3 class="card-title">@_stats.TotalVisits.ToString("N0")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">Unique Visitors</h6>
                        <h3 class="card-title">@_stats.UniqueVisitors.ToString("N0")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">Bounce Rate</h6>
                        <h3 class="card-title">@_stats.BounceRate.ToString("F1")%</h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">Page Views</h6>
                        <h3 class="card-title">@_stats.PageViews.ToString("N0")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">Avg. Session Duration</h6>
                        <h3 class="card-title">@_stats.AverageSessionDuration.ToString(@"mm\:ss")</h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-body">
                <h5 class="card-title">Performance Metrics</h5>
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Chart visualization would go here.
                    Consider integrating a charting library like Chart.js or ApexCharts.
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p class="mt-2">Loading analytics...</p>
        </div>
    }
</div>

@code {
    private DashboardStats? _stats;
    private IDashboardService? _dashboardService;

    protected override async Task OnInitializedAsync()
    {
        _dashboardService = GetService<IDashboardService>();

        if (_dashboardService != null)
        {
            _stats = await _dashboardService.GetStatsAsync();
        }
    }
}
